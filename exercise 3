from timeit import default_timer as timer
import matplotlib.pyplot as plt

def nested_loop(n):
    """Función con complejidad O(n²) que usa un bucle anidado."""
    for i in range(n):
        for j in range(n):
            pass  


n_values = [100, 400, 600, 800, 1000, 1100]
times = []


for n in n_values:
    start = timer()
    nested_loop(n)
    end = timer()
    
    proc_time = end - start
    times.append(proc_time)
    print(f"n = {n}, Tiempo de ejecución: {proc_time:.6f} segundos")

# Graficar los resultados
plt.plot(n_values, times, marker='o', linestyle='-', color='b', label='O(n²)')
plt.xlabel('Valor de n')
plt.ylabel('Tiempo de ejecución (segundos)')
plt.title('Tiempo de procesamiento vs n (O(n²))')
plt.legend()
plt.grid()
plt.show()

